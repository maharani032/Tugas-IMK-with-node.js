<%- include ("component/header-post") -%>
<%-include("component/navbar-akun")-%>
<div id="border">
</div>
<section id="content">
    <div class="title">
        <h2><%= post.title %> </h2>
    </div>
    <div class="content">
        <div class="nav-story">
            <h3>Cerita Horror Lainnya</h3>
            <ul>
                <li>Undefined</li>
                <li>Undefined</li>
                <li>Undefined</li>
            </ul>
        </div>
        <div class="story">
            <%- post.html %>
        </div>
        <a class="ikon" href="">
            <img src="https://www.flaticon.com/svg/static/icons/svg/1076/1076745.svg" alt="" style="width: 3%;">
        </a>
    </div>
    <div class="comment-list">
        <h1>Daftar Komentar : </h1>
        <div class="list">
            <% comments.forEach(comment => { %>
                <div class="komentator">
                    <p><%=comment.fname%> <%=comment.lname %> </p>
                    <p><%= comment.komen %> </p>
                </div>
            <% }) %>
        </div> 
    </div>



</section>
<div class="komentar">
    <form action="/Home/<%=post.genre%>/<%=post.title%>/comment/<%= post._id %> " method="POST" autocomplete="off">
        <h5>Komentarlah di bawah sini : </h5>
        <div class="form-froup">
            <textarea name="Komentar" class="form-control"  placeholder="Komentar" cols="40" rows="2"></textarea>
        </div>
        <button type="submit" class="btn btn-dark mt-5 btn-komen">Comment</button>
    </form>
</div>
<%- include  ("component/footer")-%>